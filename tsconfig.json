{
  "compilerOptions": {
    "target": "es6",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "jsx": "react",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2017"],
    "outDir": "public"
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "vite.config.ts"]
}